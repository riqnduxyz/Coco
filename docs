<!DOCTYPE html>
<html>
<head>
  <title>Webhook Message Sender</title>
</head>
<body>
  <h2>Send Custom Message to MacroDroid</h2>

  <input type="text" id="msg" placeholder="Type a message" style="width:80%; padding:10px;" />
  <br><br>
  <button onclick="send()">Send</button>

  <script>
    // Get webhook from URL like ?webhook=https://trigger...
    const params = new URLSearchParams(window.location.search);
    const webhookUrl = params.get("webhook");

    function send() {
      const message = document.getElementById("msg").value;
      if (!webhookUrl) {
        alert("Webhook URL not provided in link.");
        return;
      }
      if (!message) {
        alert("Please enter a message.");
        return;
      }

      fetch(webhookUrl, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ popupText: message })
      })
      .then(() => alert("Message sent!"))
      .catch((err) => alert("Failed: " + err));
    }
  </script>
</body>
</html>
